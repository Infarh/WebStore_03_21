@model IEnumerable<WebStore.Domain.ViewModels.UserOrderViewModel>
@{
    ViewBag.Title = "Заказы";
    Layout = "_UserProfileLayout";
}

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 1; }
        @foreach (var order in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@order.Name</td>
                <td>@order.Address</td>
                <td>@order.Phone</td>
                <td>@order.TotalPrice</td>
            </tr>
            foreach (var item in order.Products)
            {
                <tr>
                    <td>-</td>
                    <td>@item.Product.Name</td>
                    <td>Штук:@item.Count</td>
                    <td>Цена:@item.Price</td>
                    <td>Стоимость:@item.TotalPrice</td>
                </tr>
            }
        }
    </tbody>
</table>